<?xml version="1.0" encoding="UTF-8"?>

<!--============================================================
	Deployment Descriptor: web.xml
=============================================================-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>


  <welcome-file-list>
    <welcome-file>main.jsp</welcome-file>
  </welcome-file-list>

  <filter>
    <filter-name>AccessFilter</filter-name>
    <filter-class>com.krasn.facultative.filters.AccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>
        add-course
        AddSubject
        AssignTeacherForCourse
        BlockStudent
        DeleteCourse
        DeleteUser
        EditCourse
        ListUsers
        ListCourses
        ListStudents
        ListSubjects
        UnblockStudent
      </param-value>
    </init-param>
    <init-param>
      <param-name>teacher</param-name>
      <param-value>
        ListCoursesForEvaluation
        Evaluate
        ListCoursesForTeacher
        ListCourses
      </param-value>
    </init-param>
    <init-param>
      <param-name>student</param-name>
      <param-value>
        ListCourses
        ListCoursesInProcess
        ListDoneCourses
        ListNotStartedCourses
        SubscribeCourse
      </param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>
        logout
        NoCommand
        language
        ListCoursesSort
        PersonalArea
      </param-value>
    </init-param>
    <init-param>
      <param-name>out_of_control</param-name>
      <param-value>
        login
        add-student
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <servlet-name>controller</servlet-name>
  </filter-mapping>

  <listener>
    <listener-class>com.krasn.facultative.listeners.ContextListener</listener-class>
  </listener>

<!--  <error-page>-->
